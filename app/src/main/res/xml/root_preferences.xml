<PreferenceScreen
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
            app:title="General"
            app:iconSpaceReserved="false">

        <ListPreference
                app:key="@string/pref_language_key"
                app:title="Language"
                app:entries="@array/languages"
                app:entryValues="@array/language_values"
                app:defaultValue="en"
                app:useSimpleSummaryProvider="true"
                app:iconSpaceReserved="false"
                android:layout_height="wrap_content" />

        <ListPreference
                app:key="theme_preferences"
                app:title="Theme"
                app:defaultValue="system"
                app:entries="@array/theme_options"
                app:entryValues="@array/theme_values"
                app:useSimpleSummaryProvider="true"
                app:iconSpaceReserved="false"
                android:layout_height="wrap_content" />

        <SwitchPreferenceCompat
                app:key="notification"
                app:title="Notifications"
                app:summaryOn="Notifications are allowed"
                app:summaryOff="Notifications are not allowed"
                app:iconSpaceReserved="false"
                android:layout_height="wrap_content" />

    </PreferenceCategory>

    <PreferenceCategory
            app:title="Other"
            app:iconSpaceReserved="false">

        <Preference
                app:title="About Us"
                app:key="about_us"
                app:iconSpaceReserved="false" />

        <Preference
                app:title="About MathTrix"
                app:key="about_mathtrix"
                app:iconSpaceReserved="false" />
    </PreferenceCategory>

</PreferenceScreen>